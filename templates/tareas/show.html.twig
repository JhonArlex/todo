{% extends 'base.html.twig' %}

{% block title %}{{ tarea.nombre }}{% endblock %}

{% block body %}
    <div class="back-title">
        <a class="waves-effect blue lighten-4 btn-flat btn-back" href="{{ path('tareas_index') }}"><i class="material-icons">keyboard_arrow_left</i></a>
        <h4>Tarea {{ tarea.nombre }}</h4>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tarea.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ tarea.nombre }}</td>
            </tr>
            <tr>
                <th>Nota</th>
                <td>{{ tarea.nota }}</td>
            </tr>
            <tr>
                <th>Fecha_vencimiento</th>
                <td>{{ tarea.fechaVencimiento ? tarea.fechaVencimiento|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Importante</th>
                <td>{{ tarea.importante ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ tarea.estado }}</td>
            </tr>
        </tbody>
    </table>
    <div class="bottom">
        <a class="waves-effect waves-light btn btn-editar" href="{{ path('tareas_edit', {'id': tarea.id}) }}">Editar</a>

        {{ include('tareas/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
